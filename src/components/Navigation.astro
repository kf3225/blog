---
import home from "../assets/images/home.svg";
import twitterMark from "../assets/images/twitter-mark.svg";
import githubMark from "../assets/images/github-mark.svg";
type Props = {
  pageTitle: string;
};
const { pageTitle } = Astro.props;
const socialMedia = [
  { platform: "github", user: "kf3225", icon: githubMark },
  { platform: "twitter", user: "FKeisuke2", icon: twitterMark },
];
const pages = [
  { path: "/about", display: "ABOUT" },
  { path: "/post", display: "POST" },
];
---

<header class="text-gray-600 body-font">
  <div
    class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center max-w-6xl"
  >
    <a
      class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0"
      href="/"
    >
      <img src={home.src} />
      <span class="ml-3 text-xl">My Blog</span>
    </a>
    <nav
      class="md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400 flex flex-wrap items-center text-base justify-center"
    >
      {
        pages.map((page) => (
          <a class="mr-5 hover:text-gray-900" href={page.path}>
            {page.display}
          </a>
        ))
      }
    </nav>
    <div class="inline-flex gap-4">
      {
        socialMedia.map((media) => (
          <a href={`https://www.${media.platform}.com/${media.user}`}>
            <img
              src={media.icon.src}
              alt={media.platform}
              class="object-contain h-10"
            />
          </a>
        ))
      }
    </div>
  </div>
</header>
